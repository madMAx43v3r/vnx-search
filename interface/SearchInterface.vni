package vnx.search;

import vnx.Object;

interface SearchInterface {
	
	Object get_domain_info(string host, int limit = 10, uint offset) const async;
	
	Object get_page_info(string url_key) const async;
	
	vector<float> get_page_ranks(vector<string> url_keys, bool direct) const async;
	
	vector<Object> get_domain_list(int limit, uint offset) const;
	
	vector<pair<string, float>> get_page_ranking(int limit, uint offset) const async;
	
	vector<pair<string, float>> get_word_context(string word, int limit = 10, uint offset) const async;
	
	vector<pair<string, float>> reverse_lookup(string url_key) const async;
	
	vector<pair<string, uint>> reverse_domain_lookup(string url_key) const async;
	
	vector<pair<string, uint>> suggest_words(string prefix, int limit) const;
	
}
